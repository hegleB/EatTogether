<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.qure.presenation.viewmodel.PeopleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_activityprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.people.DetailProfileFragment">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar_activityprofile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="프로필 수정"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />


        <TextView
            android:id="@+id/textView_activityprofile_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="취소"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textSize="20dp"
            android:onClick="@{() -> viewmodel.cancelProfile()}"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView_activityprofile_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_close_24"
            android:backgroundTint="@color/black"
            android:onClick="@{() -> viewmodel.closeProfile()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_activityprofile_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="완료"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textSize="20dp"
            android:visibility="invisible"
            android:onClick="@{() -> viewmodel.submitProfile()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView_activityprofile_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/ic_user"
            userImage="@{viewmodel.myImage}"
            android:onClick="@{() -> viewmodel.editProfileImage()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_activityprofile_changeImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_add_box_24"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/circleImageView_activityprofile_profile"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView_activityprofile_profile"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/circleImageView_activityprofile_profile"
            app:layout_constraintTop_toTopOf="@+id/circleImageView_activityprofile_profile"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/textView_activityprofile_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:enabled="false"
            android:singleLine="true"
            android:text="@{viewmodel.myName}"
            android:textSize="28dp"
            android:textStyle="bold"
            android:onClick="@{() -> viewmodel.editProfileName()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.283"
            app:layout_constraintStart_toEndOf="@+id/circleImageView_activityprofile_profile"
            app:layout_constraintTop_toBottomOf="@+id/toolBar_activityprofile" />

        <TextView
            android:id="@+id/textView_activityprofile_message"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:singleLine="true"
            android:text="@{viewmodel.myMsg}"
            android:textSize="15dp"
            android:textStyle="bold"
            android:onClick="@{() -> viewmodel.editProfileMessage()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.283"
            app:layout_constraintStart_toEndOf="@+id/circleImageView_activityprofile_profile"
            app:layout_constraintTop_toBottomOf="@+id/textView_activityprofile_name" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_login_line"
            android:backgroundTint="#ECECEC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_activityprofile_message" />

        <com.yy.mobile.rollingtextview.RollingTextView
            android:id="@+id/rollingTextView_activityprofile_postCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            app:rollingText="@{viewmodel.postCount}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView_activityprofile_post"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Post"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rollingTextView_activityprofile_postCount" />

        <com.yy.mobile.rollingtextview.RollingTextView
            android:id="@+id/rollingTextView_activityprofile_meetingCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            app:rollingText="@{viewmodel.meetingCount}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.295"
            app:layout_constraintStart_toEndOf="@+id/rollingTextView_activityprofile_postCount"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView_activityprofile_meeting"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Meeting"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.295"
            app:layout_constraintStart_toEndOf="@+id/textView_activityprofile_post"
            app:layout_constraintTop_toBottomOf="@+id/rollingTextView_activityprofile_meetingCount" />

        <com.yy.mobile.rollingtextview.RollingTextView
            android:id="@+id/rollingTextView_activityprofile_likeCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            app:rollingText="@{viewmodel.likeCount}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toEndOf="@+id/rollingTextView_activityprofile_meetingCount"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />


        <TextView
            android:id="@+id/textView_activityprofile_like"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Like"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toEndOf="@+id/textView_activityprofile_meeting"
            app:layout_constraintTop_toBottomOf="@+id/rollingTextView_activityprofile_likeCount" />

        <ImageView
            android:id="@+id/imageView_activityprofile_profileEdit"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_pencil"
            android:onClick="@{() -> viewmodel.editProfile()}"
            app:layout_constraintEnd_toStartOf="@+id/imageView_activityprofile_qrcode"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_activityprofile_qrcode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/ic_baseline_qr_code_24"
            android:backgroundTint="@color/black"
            android:onClick="@{() -> viewmodel.showProfileQRCode()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView_activityprofile_scanner"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_qr_code_scanner_24"
            android:backgroundTint="@color/black"
            android:onClick="@{() -> viewmodel.showProfileQRScanner()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView_activityprofile_submit"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView_activityprofile_barcodeTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_20"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:visibility="gone"
            barcodeTimeRemaining="@{viewmodel.barcdoeCount}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_activityprofile_profileEdit" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinKitViwe_activityprofile_loading"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="invisible"
            app:SpinKit_Color="@color/black"
            app:SpinKit_Style="FadingCircle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.472" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout_activityprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_activityprofile_meeting"
            app:tabIndicatorColor="@color/black"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="#888888">


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성한 글"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아한 글" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글단 글" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager_activityprofile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout_activityprofile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>